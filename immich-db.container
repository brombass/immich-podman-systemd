[Container]
ContainerName=immich-db
Image=docker.io/tensorchord/pgvecto-rs:pg14-v0.2.0@sha256:90724186f0a3517cf6914295b5ab410db9ce23190a2d9d0b9dd6463e3fa298f0
Pod=immich.pod
Environment=POSTGRES_INITDB_ARGS=--data-checksums
EnvironmentFile=%h/immich/immich.env
Volume=%h/immich/db:/var/lib/postgresql/data:z
Volume=%h/immich/immich-db-healthcheck:/health.sh
# If you want to use the unit provided in `database_backup`
# Volume=/path/to/db/backups:/var/db_backup/:z
Exec= postgres -c shared_preload_libraries=vectors.so -c 'search_path="$$user", public, vectors' -c max_wal_size=2GB -c shared_buffers=512MB -c wal_compression=on
HealthCmd=["/bin/bash", "/health.sh"]
HealthStartPeriod=5m
HealthInterval=30s
HealthTimeout=5s
HealthRetries=5
Notify=healthy

[Service]
Restart=always

[Unit]
After=home-morten-immich.mount
Wants=home-morten-immich.mount

